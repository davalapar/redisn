{
  "name": "root",
  "private": true,
  "scripts": {
    "link:packages": "lerna link && lerna exec -- yarn link",
    "prepare": "yarn run link:packages"
  },
  "devDependencies": {
    "lerna": "^3.6.0",
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "babel-eslint": "^10.0.1",
    "husky": "^1.2.0",
    "eslint": "^5.10.0",
    "prettier": "^1.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "lint-staged": "^8.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/client",
    "packages/common/*",
    "packages/connectors/*",
    "packages/resp/*",
    "packages/types/*"
  ]
}
