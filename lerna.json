{
  "version": "0.0.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "ignore": "*-template-*"
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ]
    }
  }
}
